<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:weightSum="1"
              android:padding="8dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="0.5">

        <TextView
            android:id="@+id/id_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="id: 8"/>

        <TextView
            android:id="@+id/data_id_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="data id: foo"/>

        <TextView
            android:id="@+id/group_id_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="group id: none"/>

        <TextView
            android:id="@+id/manually_run_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="manually run: false"/>

        <TextView
            android:id="@+id/tag_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="tag: FooPendingTask"/>

        <TextView
            android:id="@+id/created_at_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Created: 2/20/2018"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="0.5">

        <com.levibostian.wendyexample.PendingStatusTextView
            android:id="@+id/status_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="status: running"/>

        <Button
            android:id="@+id/run_ask_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Run task"/>
    </LinearLayout>

</LinearLayout>